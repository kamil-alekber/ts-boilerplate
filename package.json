{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "ts": "node_modules/.bin/tsc --build tsconfig.json",
    "lint": "node_modules/.bin/eslint src",
    "babel": "node ./scripts/yaml --file=.babelrc.yml --out=.babelrc --show && ./node_modules/.bin/babel -d dist -x=[.es6,.js,.es,.jsx,.mjs,.ts,.tsx] src && rm -rf .babelrc",
    "build": "yarn lint && yarn ts && yarn babel",
    "watch": "node_modules/.bin/nodemon",
    "start": "node dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.12.16",
    "@babel/core": "7.12.16",
    "@babel/plugin-transform-modules-commonjs": "7.12.13",
    "@babel/preset-env": "7.12.16",
    "@babel/preset-typescript": "7.12.16",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "babel-preset-minify": "0.5.1",
    "eslint": "7.20.0",
    "nodemon": "2.0.7",
    "ts-node": "9.1.1",
    "typescript": "4.1.5",
    "yaml": "1.10.0"
  }
}
